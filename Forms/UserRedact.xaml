                </Button>


            </StackPanel>
            <Image 
            MaxWidth="100"
            Stretch="Fill"
            MaxHeight="100"
            Name="ImageBox"
            Grid.Row="2"
            Grid.Column="3"/>-->
            <Border   
                Panel.ZIndex="-20"
                Width="450"
                x:Name="obud"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2" 
                Grid.Row="2">
                <Rectangle 
                    RadiusX="100"
                    RadiusY="200"
                    Name="Rect_obud"
                    Width="auto"
                    RenderTransformOrigin="0.5,0.5"
                    Margin="-77,105,77,-136" 
                    Fill="#FF44A0F1">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="23.335"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Border>
        </Grid>
    </Grid>
</Window>
